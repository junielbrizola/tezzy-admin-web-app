datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  type     String
  ean      String   @unique
  qtd      Int
  size     String
  color    String
  model    String
  custom   Boolean
  price    Float
  material String
  medias   String[]
}

model Option {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String
  optionRef String? @db.ObjectId
}

model Subscriber {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}