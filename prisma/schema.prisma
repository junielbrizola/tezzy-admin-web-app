datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ETypeUser {
  ADMIN
  CLIENT
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  type      ETypeUser @default(CLIENT)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  ean       String   @unique
  qtd       Int      @default(0)
  size      String
  color     String
  model     String
  custom    Boolean
  price     Float
  material  String
  medias    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Option {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String
  optionRef String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}